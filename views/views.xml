<odoo>

    <!-- TREE -->
    <record id="view_coche_tree" model="ir.ui.view">
        <field name="name">coche.tree</field>
        <field name="model">concesionario.coche</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="marca_id" />
                <field name="precio" />
                <field name="estado" />
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_coche_form" model="ir.ui.view">
        <field name="name">coche.form</field>
        <field name="model">concesionario.coche</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="marca_id" />
                        <field name="precio" />
                        <field name="fecha_fabricacion" />
                        <field name="estado" readonly="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KANBAN -->
    <record id="view_coche_kanban" model="ir.ui.view">
        <field name="name">coche.kanban</field>
        <field name="model">concesionario.coche</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name" />
                            </strong>
                            <div>
                                <field name="marca_id" />
                            </div>
                            <div><field name="precio" /> â‚¬</div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_coche_search" model="ir.ui.view">
        <field name="name">coche.search</field>
        <field name="model">concesionario.coche</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="marca_id" />
                <filter string="Available" name="available" domain="[('estado','=','Disponible')]" />
            </search>
        </field>
    </record>

    <record id="action_coche" model="ir.actions.act_window">
        <field name="name">Coches</field>
        <field name="res_model">concesionario.coche</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="menu_coche" name="Coches" parent="menu_concesionario" action="action_coche" />


</odoo>